<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM022PP0122.MainPage"
             BackgroundImageSource="fondo">

    <StackLayout>

        <Label Text="Nombre" FontSize="16" Padding="10,5,30,10"/>
        
        <Entry Placeholder="Nombre" 
               Keyboard="Text" 
               x:Name="txtNombre" 
               BackgroundColor="White"/>
        
        <Label Text="Edad" 
               FontSize="16" 
               Padding="1,5,30,0"/>
        
        <Entry Placeholder="Edad" 
               Keyboard="Text" 
               x:Name="txtEdad" 
               BackgroundColor="White"/>

        <Button Text="Mostrar" 
                x:Name="btnMostrar" 
                Margin="10,0,10,0" 
                Clicked="btnMostrar_Clicked"/>

        <Button Text="Segunda Pagina" 
                x:Name="btnSegunda" 
                Margin="10,0,10,0" 
                Clicked="btnSegundaPag_Clicked"/>

    </StackLayout>

</ContentPage>
